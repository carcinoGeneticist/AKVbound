<sburb description="roof">
	<dependencies>
		<dependency>
			roofLog.xml
		</dependency>
	</dependencies>

	<classes>
    	<animation class='karkat-dialog' frameInterval='6' x='-180' y='-454'/>
   		<animation class='dave-dialog' frameInterval='6' x='-230' y='-454'/>
  	</classes>

	<assets>
		<asset name='karkatSheet' type='graphic'>chars/karkat.png</asset>
	    <asset name='daveSheet'   type='graphic'>chars/dave.png</asset>

	    <asset name='obvDeckWalkable' type='graphic'>backgrounds/obvDeckWalkable.gif</asset>
	    <asset name='obvDeckBG'       type='graphic'>backgrounds/obvDeckBG.png</asset>
	    <asset name='obvDeckFG'       type='graphic'>backgrounds/obvDeckFG.png</asset>
	  	<asset name='staircase'       type='path'>465,515;465,615;295,785;200,780</asset>
	</assets>

	<hud></hud>

	<effects>
		<animation name='karkatWalk' sheet='karkatSheet' x='-37' y='-65' rowSize='75' colSize='75' length='3' followUp='idleFront'/> 
	</effects>

	<rooms> <!-- 530x560-->
		<room name='roof' width='922' height='874' walkableMap='obvDeckWalkable'>
			<paths>
        		<motionpath path="staircase" xtox = '0.7' xtoy = '-0.7' ytox='0' ytoy = '1' dx='0' dy='0'/>
      		</paths>

		

			<character name='karkat' x='550' y='530' sx='-37' sy='-65' sWidth='75' sHeight='75' width='36' height='16' sheet='karkatSheet' state='walkFront' facing='Front'>
     	 	</character>
      		<character name='dave' x='560' y='580' sx='-37' sy='-65' sWidth='75' sHeight='75' width='36' height='16' sheet='daveSheet' state='walkRight' facing='Right'>
      			<action command='follow'>
      				<args>dave,char</args>
      			</action>
      		</character>

	      	<sprite name='obvDeckBG'>
	        	<animation sheet='obvDeckBG'/> 
	      	</sprite>
	      	<sprite name='obvDeckFG' x='0' y='0' depthing='2'>
	       		<animation sheet='obvDeckFG'/>
	      	</sprite>
		</room>
	</rooms>
</sburb>